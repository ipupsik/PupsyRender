{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'pupsy_raytracing_engine'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=pupsy_raytracing_engine"
                ],
                "filter": {
                    "name": "pupsy_raytracing_engine",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'pupsy_raytracing_engine'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=pupsy_raytracing_engine",
                    "--package=pupsy_raytracing_engine"
                ],
                "filter": {
                    "name": "pupsy_raytracing_engine",
                    "kind": "bin"
                }
            },
            "args": [
                "--in", "example/example1.gltf",
                "--spp", "100",
                "--depth", "100"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'pupsy_raytracing_engine'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=pupsy_raytracing_engine",
                    "--package=pupsy_raytracing_engine"
                ],
                "filter": {
                    "name": "pupsy_raytracing_engine",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}